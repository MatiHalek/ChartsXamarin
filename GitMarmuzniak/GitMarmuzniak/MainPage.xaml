<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitMarmuzniak.MainPage" Title="Wykresy">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Zmień dane" Clicked="ToolbarItem_Clicked"/>
    </TabbedPage.ToolbarItems>
    <ContentPage Title="Słupkowy" Appearing="WykresSlupkowy_Appearing">
        <Grid x:Name="wykresSlupkowy"></Grid>
    </ContentPage>
    <ContentPage Title="Kołowy" Appearing="WykresKolowy_Appearing">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="wykresKolowy" VerticalOptions="Center" HorizontalOptions="Center"></Grid>
            <StackLayout x:Name="wykresKolowyStackLayout" Grid.Row="1">
                
            </StackLayout>
        </Grid>
    </ContentPage>
    

</TabbedPage>
